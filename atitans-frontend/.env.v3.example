# V3 Trade Platform Environment Configuration
# Add these variables to your .env file for V3 functionality

# Network Configuration
REACT_APP_NETWORK=localnet
# Options: localnet, testnet, mainnet

# V3 Contract App IDs (set after deployment)
REACT_APP_REGISTRY_APP_ID=0
REACT_APP_MARKETPLACE_APP_ID=0
REACT_APP_FINANCE_POOL_APP_ID=0
REACT_APP_LENDING_APP_ID=0

# Asset Configuration
REACT_APP_USDC_ASSET_ID=31566704
# USDC Asset ID (31566704 for mainnet, update for testnet/localnet)

# Feature Flags
REACT_APP_ENABLE_TRADING=true
REACT_APP_ENABLE_LENDING=true
REACT_APP_ENABLE_POOLS=true
REACT_APP_ENABLE_RISK_SCORING=true

# After deploying V3 contracts, update the app IDs above:
# 1. Deploy trade_instrument_registry_v3
# 2. Deploy atomic_marketplace_v3  
# 3. Initialize marketplace with registry app ID
# 4. Update this configuration file
# 5. Restart the frontend application
